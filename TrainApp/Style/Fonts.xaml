<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TrainApp" xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="SegoeUIReg">pack://application;,,,/SegoeUI/#Segoe UI</FontFamily>
    <FontFamily x:Key="Lato">pack://application;,,,/SegoeUI/#Lato Light</FontFamily>


    <Style TargetType="{x:Type Control}" x:Key="BasicStyle">
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIReg}"/>

    </Style>

    <FontFamily x:Key="SegoeUIBold">pack://application;,,,/SegoeUI/#Segoe UI Bold</FontFamily>

    <Style TargetType="{x:Type TextBlock}" x:Key="BasicTextStyle">
        <Setter Property="FontFamily" Value="{StaticResource SegoeUIReg}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>

    </Style>
    
    
    
    <system:Double x:Key="FSDExtraLarge">
        35
    </system:Double>
    
    <system:Double x:Key="FSLarge">
        29
    </system:Double>

    <system:Double x:Key="FSNormal">
        13
    </system:Double>
    
    <system:Double x:Key="FSSmall">
        11
    </system:Double>

    <system:Double x:Key="FSTiny">
        9
    </system:Double>


</ResourceDictionary>