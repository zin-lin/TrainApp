<Page x:Class="TrainApp.OpenTrains"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainApp" Loaded="Page_Loaded"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="OpenTrains">
    <Page.Resources>
       
        <Style x:Key="ListViewStyle1" TargetType="{x:Type ListView}">

            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListView}">
                        <Border x:Name="Bd" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0" 
                                Background="Transparent" 
                                Padding="1" SnapsToDevicePixels="true">

                            <ItemsPresenter 
                                    SnapsToDevicePixels 
                                    ="{TemplateBinding SnapsToDevicePixels}"/>

                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Focusable" Value="False"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  
                </Trigger>
            </Style.Triggers>


        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Images/bgx.jpg"/>
        </Grid.Background>
        <!--This will be the edit window-->
        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>

            <!--Box Form For Adding New Bookings-->
            <Button Style="{StaticResource Navbar-1}" HorizontalAlignment="Right" Click="GoBack" Grid.Row="0" Margin="10 0" Height="35">Back</Button>

            <Border Grid.Row="2" Margin="30" Background="#edffffff" CornerRadius="26" HorizontalAlignment="Center"
                    Width="580" Name="bdIfNoBooking" 
                    >
               
                <StackPanel>
                    <Image Source="Images/C.PNG" Width="200"/>
                    <TextBlock Text="No Bookings Please add more" HorizontalAlignment="Center" FontSize="15"
                               FontWeight="Bold"
                               />
                </StackPanel>
                
            </Border>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                              Grid.Row="2"
                              Style="{StaticResource ScVwer}">
                <ListView  Name="data" 
                                  Style="{DynamicResource ListViewStyle1}"
                                  BorderThickness="0" IsHitTestVisible="True"
                                  Focusable="False" 
                                  OverridesDefaultStyle="True"
                                  Padding="0"
                                  VerticalAlignment="Stretch" 
                                >

                    <ListView.ItemContainerStyle>

                        <Style TargetType="ListViewItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate  
                                    
                                    TargetType="ListViewItem" >


                                        <Border x:Name="Bd">
                                            <ContentPresenter 
                                         
                                          Margin="0" Focusable="False" 
                                          HorizontalAlignment="Center"/>

                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Background" TargetName="Bd" Value="Transparent"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>


                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Style.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="IsHitTestVisible" Value="True"/>
                                    <Setter Property="Background" 
                                                    Value="Transparent"
                                                    
                                                    ></Setter>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Focusable"
                                                    Value="False"
                                                    ></Setter>
                                    <Setter Property="BorderThickness"
                                                    Value="0"
                                                    />
                                </Trigger>

                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Background"
                                                    Value="Transparent"
                                                    ></Setter>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="BorderThickness"
                                                    Value="0"
                                                    />

                                </Trigger>

                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Background"
                                                    Value="Transparent"
                                                    ></Setter>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="BorderThickness"
                                                    Value="0"
                                                    />
                                </Trigger>


                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background"
                                                    Value="Transparent"
                                                    ></Setter>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="BorderThickness"
                                                    Value="0"
                                                    />
                                </Trigger>

                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background"
                                                    Value="Transparent"
                                                    ></Setter>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="BorderThickness"
                                                    Value="0"
                                                    />
                                </Trigger>

                                <Trigger Property="IsMouseDirectlyOver" Value="True">
                                    <Setter Property="Background"
                                                    Value="Transparent"
                                                    ></Setter>
                                    <Setter Property="BorderThickness"
                                                    Value="0"
                                                    />
                                </Trigger>



                            </Style.Triggers>
                        </Style>

                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <HierarchicalDataTemplate >
                            <Border  Background="#edffffff" Padding="30" CornerRadius="17"  Margin="12 0 10 26"
                                    MinWidth="680" Focusable ="False"
                                    HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="10 0">
                                        <Viewbox Width="20" Height="20" VerticalAlignment="Top">
                                            <Canvas Width="24" Height="24">
                                                <Path Fill="Gray" Data="M17.5 14.33C18.29 14.33 19.13 14.41 20 14.57V16.07C19.38 15.91 18.54 15.83 17.5 15.83C15.6 15.83 14.11 16.16 13 16.82V15.13C14.17 14.6 15.67 14.33 17.5 14.33M13 12.46C14.29 11.93 15.79 11.67 17.5 11.67C18.29 11.67 19.13 11.74 20 11.9V13.4C19.38 13.24 18.54 13.16 17.5 13.16C15.6 13.16 14.11 13.5 13 14.15M17.5 10.5C15.6 10.5 14.11 10.82 13 11.5V9.84C14.23 9.28 15.73 9 17.5 9C18.29 9 19.13 9.08 20 9.23V10.78C19.26 10.59 18.41 10.5 17.5 10.5M21 18.5V7C19.96 6.67 18.79 6.5 17.5 6.5C15.45 6.5 13.62 7 12 8V19.5C13.62 18.5 15.45 18 17.5 18C18.69 18 19.86 18.16 21 18.5M17.5 4.5C19.85 4.5 21.69 5 23 6V20.56C23 20.68 22.95 20.8 22.84 20.91C22.73 21 22.61 21.08 22.5 21.08C22.39 21.08 22.31 21.06 22.25 21.03C20.97 20.34 19.38 20 17.5 20C15.45 20 13.62 20.5 12 21.5C10.66 20.5 8.83 20 6.5 20C4.84 20 3.25 20.36 1.75 21.07C1.72 21.08 1.68 21.08 1.63 21.1C1.59 21.11 1.55 21.12 1.5 21.12C1.39 21.12 1.27 21.08 1.16 21C1.05 20.89 1 20.78 1 20.65V6C2.34 5 4.18 4.5 6.5 4.5C8.83 4.5 10.66 5 12 6C13.34 5 15.17 4.5 17.5 4.5Z" />
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock Text="{Binding  Id, StringFormat= Id: {0:C}, FallbackValue='Booking'}" FontSize="20" Margin="10 0"
                                                   VerticalAlignment="Center"
                                                   FontFamily="{StaticResource Lato}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="20 10" >
                                        <Viewbox Width="20" Height="20" Margin="10 0" VerticalAlignment="Center">
                                            <Canvas Width="24" Height="24">
                                                <Path Fill="Gray" Data="M13.07 10.41A5 5 0 0 0 13.07 4.59A3.39 3.39 0 0 1 15 4A3.5 3.5 0 0 1 15 11A3.39 3.39 0 0 1 13.07 10.41M5.5 7.5A3.5 3.5 0 1 1 9 11A3.5 3.5 0 0 1 5.5 7.5M7.5 7.5A1.5 1.5 0 1 0 9 6A1.5 1.5 0 0 0 7.5 7.5M16 17V19H2V17S2 13 9 13 16 17 16 17M14 17C13.86 16.22 12.67 15 9 15S4.07 16.31 4 17M15.95 13A5.32 5.32 0 0 1 18 17V19H22V17S22 13.37 15.94 13Z" />
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock FontFamily="{StaticResource Lato}" Text="{Binding Tickets}" 
                                                   Margin="10 0"
                                                   VerticalAlignment="Center"/>
                                        <Border Height="30" Width="1" Margin="0 0 10 0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                                    <GradientStop
                                                        Color="#00ffffff" Offset="0"
                                                        ></GradientStop>

                                                    <GradientStop
                                                        Color= "#20000000" Offset="0.5"
                                                        ></GradientStop>

                                                    <GradientStop
                                                        Color="#00ffffff" Offset="1"
                                                        ></GradientStop>

                                                </LinearGradientBrush>
                                            </Border.Background>

                                        </Border>
                                        <TextBlock FontFamily="{StaticResource Lato}" VerticalAlignment="Center" Foreground="{StaticResource Light Grey}" Text=" with "/>

                                        <TextBlock FontFamily="{StaticResource Lato}" VerticalAlignment="Center" Foreground="{StaticResource Light Grey}" Margin="0 0" Text="{Binding Reserved.Count}"/>
                                        <TextBlock FontFamily="{StaticResource Lato}" VerticalAlignment="Center" Foreground="{StaticResource Light Grey}" Text=" reservation"/>

                                        
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="20 10">
                                        <Viewbox Width="18" Height="18" Margin="10 0" VerticalAlignment="Center">
                                            <Canvas Width="24" Height="24">
                                                <Path Fill="Gray" Data="M9 9V11H7V9H5V11H3V9H1V21H3V19H5V21H7V19H9V21H11V19H13V21H15V19H17V21H19V19H21V21H23V9H21V11H19V9H17V11H15V9H13V11H11V9H9M3 13H5V17H3V13M7 13H9V17H7V13M11 13H13V17H11V13M15 13H17V17H15V13M19 13H21V17H19V13Z" />
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock Text="{Binding Departure}"  VerticalAlignment="Center"  FontFamily="{StaticResource Lato}"/>
                                        <Viewbox Width="18" Height="18" Margin="10 0" VerticalAlignment="Center">
                                            <Canvas Width="24" Height="24">
                                                <Path Fill="Gray" Data="M9 9V11H7V9H5V11H3V9H1V21H3V19H5V21H7V19H9V21H11V19H13V21H15V19H17V21H19V19H21V21H23V9H21V11H19V9H17V11H15V9H13V11H11V9H9M3 13H5V17H3V13M7 13H9V17H7V13M11 13H13V17H11V13M15 13H17V17H15V13M19 13H21V17H19V13Z" />
                                            </Canvas>
                                        </Viewbox>

                                        <TextBlock Text="{Binding Arrival}"  VerticalAlignment="Center" FontFamily="{StaticResource Lato}"/>
                                    </StackPanel>
                                    
                                    <Border Height="1" Width="600">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                                <GradientStop
                                                                Color="#00ffffff" Offset="0"
                                                                ></GradientStop>

                                                <GradientStop
                                                                Color= "#20000000" Offset="0.5"
                                                                ></GradientStop>

                                                <GradientStop
                                                                Color="#00ffffff" Offset="1"
                                                                ></GradientStop>

                                            </LinearGradientBrush>
                                        </Border.Background>

                                    </Border>
                                    <Button Style="{StaticResource Blury}" HorizontalAlignment="Right" DataContext="{Binding}"
                                            Click="OpenManifest"
                                            >
                                        <StackPanel Orientation="Horizontal">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="AliceBlue" Data="M15.58,16.8L12,14.5L8.42,16.8L9.5,12.68L6.21,10L10.46,9.74L12,5.8L13.54,9.74L17.79,10L14.5,12.68M20,12C20,10.89 20.9,10 22,10V6C22,4.89 21.1,4 20,4H4A2,2 0 0,0 2,6V10C3.11,10 4,10.9 4,12A2,2 0 0,1 2,14V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V14A2,2 0 0,1 20,12Z" />
                                                </Canvas>

                                            </Viewbox>
                                            <TextBlock Text="View Booking Details" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </HierarchicalDataTemplate>
                    </ListView.ItemTemplate>

                    </ListView>
                </ScrollViewer>
            

            <Border x:Name="editBox" Grid.Row="1" Background="#edffffff" Margin="40" CornerRadius="15" Padding="10"
                        BorderBrush="{StaticResource Dark White}"  MaxWidth="800"
                        BorderThickness="1.2"
                        >
                <ScrollViewer  Style="{StaticResource ScVwer}" HorizontalScrollBarVisibility="Auto"
                               
                               VerticalScrollBarVisibility="Auto">

                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Viewbox Width="30" Height="30" VerticalAlignment="Top">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="Black" Data="M17.5 14.33C18.29 14.33 19.13 14.41 20 14.57V16.07C19.38 15.91 18.54 15.83 17.5 15.83C15.6 15.83 14.11 16.16 13 16.82V15.13C14.17 14.6 15.67 14.33 17.5 14.33M13 12.46C14.29 11.93 15.79 11.67 17.5 11.67C18.29 11.67 19.13 11.74 20 11.9V13.4C19.38 13.24 18.54 13.16 17.5 13.16C15.6 13.16 14.11 13.5 13 14.15M17.5 10.5C15.6 10.5 14.11 10.82 13 11.5V9.84C14.23 9.28 15.73 9 17.5 9C18.29 9 19.13 9.08 20 9.23V10.78C19.26 10.59 18.41 10.5 17.5 10.5M21 18.5V7C19.96 6.67 18.79 6.5 17.5 6.5C15.45 6.5 13.62 7 12 8V19.5C13.62 18.5 15.45 18 17.5 18C18.69 18 19.86 18.16 21 18.5M17.5 4.5C19.85 4.5 21.69 5 23 6V20.56C23 20.68 22.95 20.8 22.84 20.91C22.73 21 22.61 21.08 22.5 21.08C22.39 21.08 22.31 21.06 22.25 21.03C20.97 20.34 19.38 20 17.5 20C15.45 20 13.62 20.5 12 21.5C10.66 20.5 8.83 20 6.5 20C4.84 20 3.25 20.36 1.75 21.07C1.72 21.08 1.68 21.08 1.63 21.1C1.59 21.11 1.55 21.12 1.5 21.12C1.39 21.12 1.27 21.08 1.16 21C1.05 20.89 1 20.78 1 20.65V6C2.34 5 4.18 4.5 6.5 4.5C8.83 4.5 10.66 5 12 6C13.34 5 15.17 4.5 17.5 4.5Z" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock FontFamily="{StaticResource Lato}" VerticalAlignment="Center"
                                       FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="35 0">Add New Booking</TextBlock>

                        </StackPanel>
                        <Grid VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1">


                                <Border Height="1" Width="290">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                            <GradientStop
                                                                Color="#00ffffff" Offset="0"
                                                                ></GradientStop>

                                            <GradientStop
                                                                Color= "#20000000" Offset="0.5"
                                                                ></GradientStop>

                                            <GradientStop
                                                                Color="#00ffffff" Offset="1"
                                                                ></GradientStop>

                                        </LinearGradientBrush>
                                    </Border.Background>

                                </Border>



                                <Button Style="{StaticResource Springboot}" Margin="30 04 30 0" Name="btnReserveSeat"
                                        Click="reserveSeat"
                                        >
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Width="18" Height="18" Margin="10 0">
                                            <Canvas Width="24" Height="24">
                                                <Path Fill="AliceBlue" Data="M5 9.15V7C5 5.9 5.9 5 7 5H17C18.1 5 19 5.9 19 7V9.16C17.84 9.57 17 10.67 17 11.97V14H7V11.96C7 10.67 6.16 9.56 5 9.15M20 10C18.9 10 18 10.9 18 12V15H6V12C6 10.9 5.11 10 4 10S2 10.9 2 12V17C2 18.1 2.9 19 4 19V21H6V19H18V21H20V19C21.1 19 22 18.1 22 17V12C22 10.9 21.1 10 20 10Z" />
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock VerticalAlignment="Center" Name="txtBtnReserveSeat">Reserve Seats</TextBlock>
                                    </StackPanel>

                                </Button>
                                <Button Style="{StaticResource GrayTwo}"  Margin="30 04" IsEnabled="False"
                                Name="btnReserveMeal" Click="btnReserveMeal_Click"
                                >

                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Width="18" Height="18" Margin="10 0">
                                            <Canvas Width="24" Height="24">
                                                <Path Fill="AliceBlue" Data="M3,19V17H17L15.26,15.24L16.67,13.83L20.84,18L16.67,22.17L15.26,20.76L17,19H3M17,8V5H15V8H17M17,3C18.11,3 19,3.9 19,5V8C19,9.11 18.11,10 17,10H15V11A4,4 0 0,1 11,15H7A4,4 0 0,1 3,11V3H17Z" />
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock VerticalAlignment="Center" Name="txtReserveMeal" >Reserve Meals</TextBlock>
                                    </StackPanel>
                                </Button>

                                <Border Height="1" Width="290">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                            <GradientStop
                                                                Color="#00ffffff" Offset="0"
                                                                ></GradientStop>

                                            <GradientStop
                                                                Color= "#20000000" Offset="0.5"
                                                                ></GradientStop>

                                            <GradientStop
                                                                Color="#00ffffff" Offset="1"
                                                                ></GradientStop>

                                        </LinearGradientBrush>
                                    </Border.Background>

                                </Border>

                            </StackPanel>
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                                    <StackPanel>
                                        
                                        
                                     <TextBox   Name="txtOrigin" FontFamily="{StaticResource Lato}" 
                                     FontSize="11"  Width="150" PreviewKeyDown="txtOrigin_PreviewKeyDown"
                                     Foreground="Black" Tag="Departure Station @Edinburgh"
                                     Margin="5 0" Background="Transparent" BorderThickness="0"
                                     Height="45" HorizontalAlignment="Left" VerticalAlignment="Center"
                                     VerticalContentAlignment="Center" TextChanged="txtOrigin_TextChanged">
                                          
                                        </TextBox>
                                        <Border Height="1" Width="200">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                                    <GradientStop
                                                                Color="#00ffffff" Offset="0"
                                                                ></GradientStop>

                                                    <GradientStop
                                                                Color= "#20000000" Offset="0.5"
                                                                ></GradientStop>

                                                    <GradientStop
                                                                Color="#00ffffff" Offset="1"
                                                                ></GradientStop>

                                                </LinearGradientBrush>
                                            </Border.Background>

                                        </Border>
                                    </StackPanel>

                                    
                                    <StackPanel>
                                        <TextBox Name="txtDest" FontFamily="{StaticResource Lato}"  TextChanged="txtDest_TextChanged"
                                     FontSize="11" Tag="Arrival Station @London" Width="150" PreviewKeyDown="txtDest_PreviewKeyDown"
                                     Height="45" HorizontalAlignment="Center" VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"/>
                                        <Border Height="1" Width="200">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                                    <GradientStop
                                                                Color="#00ffffff" Offset="0"
                                                                ></GradientStop>

                                                    <GradientStop
                                                                Color= "#20000000" Offset="0.5"
                                                                ></GradientStop>

                                                    <GradientStop
                                                                Color="#00ffffff" Offset="1"
                                                                ></GradientStop>

                                                </LinearGradientBrush>
                                            </Border.Background>

                                        </Border>
                                    </StackPanel>




                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <StackPanel>
                                        <TextBox Name="txtTickets" FontFamily="{StaticResource Lato}" KeyDown="txtTickets_KeyDown"
                                     TextChanged="txtTickets_TextChanged" 
                                     FontSize="11" Tag="Enter exact Number of tickets " Width="150"
                                     Height="45" HorizontalAlignment="Left" VerticalAlignment="Center"
                                     VerticalContentAlignment="Center">
                                           
                                        </TextBox>
                                        
                                        <Border Height="1" Width="200">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                                    <GradientStop
                                                                Color="#00ffffff" Offset="0"
                                                                ></GradientStop>

                                                    <GradientStop
                                                                Color= "#20000000" Offset="0.5"
                                                                ></GradientStop>

                                                    <GradientStop
                                                                Color="#00ffffff" Offset="1"
                                                                ></GradientStop>

                                                </LinearGradientBrush>
                                            </Border.Background>

                                        </Border>

                                    </StackPanel>
                                    <Button Style="{StaticResource Rounded}" FontFamily="{StaticResource Lato}"
                                     VerticalAlignment="Center" Margin="15 0" Click="btnChangeClass" Width="170"
                                    >Upgrade Ticket</Button>

                                </StackPanel>




                            </StackPanel>

                        </Grid>
                        <Border Height="1" Width="400">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                    <GradientStop
                                                                Color="#00ffffff" Offset="0"
                                                                ></GradientStop>

                                    <GradientStop
                                                                Color= "#20000000" Offset="0.5"
                                                                ></GradientStop>

                                    <GradientStop
                                                                Color="#00ffffff" Offset="1"
                                                                ></GradientStop>

                                </LinearGradientBrush>
                            </Border.Background>

                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="Black" Data="M13.07 10.41A5 5 0 0 0 13.07 4.59A3.39 3.39 0 0 1 15 4A3.5 3.5 0 0 1 15 11A3.39 3.39 0 0 1 13.07 10.41M5.5 7.5A3.5 3.5 0 1 1 9 11A3.5 3.5 0 0 1 5.5 7.5M7.5 7.5A1.5 1.5 0 1 0 9 6A1.5 1.5 0 0 0 7.5 7.5M16 17V19H2V17S2 13 9 13 16 17 16 17M14 17C13.86 16.22 12.67 15 9 15S4.07 16.31 4 17M15.95 13A5.32 5.32 0 0 1 18 17V19H22V17S22 13.37 15.94 13Z" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource Lato}" Name="txtClass"
                                       FontSize="12" HorizontalAlignment="Center" Margin="20" Foreground="{StaticResource Dark Grey}"
                                       FontWeight="Bold"
                                       >Standard Class</TextBlock>
                            <Button Margin="30 10" Content="Add+" Style="{StaticResource Blury}" Width="130"
                                    Click="AddBooking"  HorizontalAlignment="Right"
                                    />
                        </StackPanel>


                    </StackPanel>


                </ScrollViewer>
            </Border>
        </Grid>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Style="{StaticResource ScVwer}"
                      HorizontalAlignment="Left" Width="280" Background="#edffffff" Grid.Column="0"
                      >
            <StackPanel x:Name="mainData">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Viewbox Width="38" Height="38" Margin="10 10">
                        <Canvas Width="24" Height="24">
                            <Path Fill="{StaticResource Dark Grey}" Data="M18,10H6V5H18M12,17C10.89,17 10,16.1 10,15C10,13.89 10.89,13 12,13A2,2 0 0,1 14,15A2,2 0 0,1 12,17M4,15.5A3.5,3.5 0 0,0 7.5,19L6,20.5V21H18V20.5L16.5,19A3.5,3.5 0 0,0 20,15.5V5C20,1.5 16.42,1 12,1C7.58,1 4,1.5 4,5V15.5Z" />
                        </Canvas>
                    </Viewbox>

                    <TextBlock Text="{Binding train.Name, FallbackValue='Train Name'}" 
                               VerticalAlignment="Center" Name="txtTrainName"
                               FontSize="20" FontWeight="Bold" FontFamily="{StaticResource Lato}"
